rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /chips/{chipId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /todos/{todoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /notes/{noteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}